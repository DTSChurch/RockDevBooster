<Window x:Class="com.blueboxmoon.RockLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:com.blueboxmoon.RockLauncher"
        mc:Ignorable="d"
        Title="Rock Launcher"
        Height="350"
        Width="525"
        MinHeight="300"
        MinWidth="400"
        Background="#dbd5cb">
    <Grid>
        <TabControl Background="#dbd5cb">
            <TabItem Header="Instances">
                <Grid Background="#dbd5cb">
                    <local:InstancesView />
                </Grid>
            </TabItem>
            <TabItem Header="GitHub Versions">
                <Grid Background="#dbd5cb">
                    <local:GitHubVersions />
                </Grid>
            </TabItem>
            <TabItem Header="Templates">
                <Grid Background="#dbd5cb">
                    <local:TemplatesView/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
